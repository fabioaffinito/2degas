# makefile


# Add inputs and outputs from these tool invocations to the build variables 

#F90 parallel version
F90_EXE=rept90.x
F90=mpif90
F90_SRC = ewald.f90 main.f90 reptation.f90
F90FLAGS= -O2 -g
F90_OBJS = ewald.o main.o reptation.o 

all : $(F90_EXE) 
 

#
#  F90
#
$(F90_EXE):$(F90_OBJS)
	$(F90) $(LDFLAGS) -o $@ $(F90_OBJS)

%.o:%.f90
	$(F90) $(F90FLAGS) -c $< 

#
#

clean:
	-rm $(F90_EXE) *.o


