# make defs for Fermi
F90_EXE=rept-fermi90.x
F90=mpixlf90_r
BLAS_INTERNAL=
#
# other fpp flags include -DDEBUG
#FPP=-qsuffix=cpp=f90 -WF,-DBLAS_INTERNAL
FPP=-qsuffix=cpp=f90 
F90FLAGS= -O3 -qarch=qp -qarch=qp

ifdef BLAS_INTERNAL
   LDFLAGS=
else
   LDFLAGS=-L$(LAPACK_LIB) -llapack -L$(ESSL_LIB) -lesslbg -L$(BLAS_LIB) -lblas
endif

