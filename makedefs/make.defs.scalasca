# make defs for Galileo
F90=scorep mpif90
BLAS_INTERNAL=
#
# other fpp flags include -DDEBUG
#FPP=-fpp -DBLAS_INTERNAL -DDEBUG
FPP=-fpp
F90FLAGS= -O3 -g

ifdef BLAS_INTERNAL
   EXE=rept90-int.x
   FPP:= $(FPP) -DBLAS_INTERNAL
   LDFLAGS=
else
   EXE=rept90-scal.x
   F90_OBJS:= tools.o $(F90_OBJS)
   LDFLAGS=-mkl
endif

